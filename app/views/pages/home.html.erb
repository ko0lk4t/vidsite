<h1 class="text-center mt-5">Get in touch</h1>
<div class="container col-6">
  <%= simple_form_for [@booking] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-input">
      <%= f.input :name, placeholder: "Name" %>
      <%= f.input :email, placeholder: "Email" %>
      <%= f.input :message, placeholder: "Leave me a message and I will be in touch shortly" %>
    </div>
    <div class="form-actions">
      <div class="d-grid gap-2">
        <%= f.submit "Send message", class: "btn btn-primary mb-5" %>
      </div>
      <%= link_to "Previous", root_path, class: "btn btn-outline-secondary mb-5" %>
    </div>
  <% end %>
</div>
